<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Historial de HidrataciÃ³n ðŸ’§"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0057D9"
        android:gravity="center"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consumo Diario"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TableLayout
            android:id="@+id/hydration_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="@android:color/darker_gray"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E3F2FD">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DÃ­a"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Consumo (ml)"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estado"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
            </TableRow>

        </TableLayout>
    </ScrollView>

    <!-- Resumen Semanal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen Semanal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: 10000 ml"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvPromedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promedio: 2030 ml"
            android:textSize="14sp"
            android:paddingTop="2dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvDiasLogrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DÃ­as logrados: 3/7"
            android:textSize="14sp"
            android:paddingTop="2dp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
