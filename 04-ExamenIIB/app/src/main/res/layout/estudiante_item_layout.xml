<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_card_view_materia_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="1dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/BORDER"
        android:layout_width="match_parent"
        android:layout_height="101dp">

        <TextView
            android:id="@+id/tv_estudiante_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_estudiante_codigo"
            android:layout_width="19dp"
            android:layout_height="22dp"
            android:layout_marginStart="5dp"
            android:text="ID"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_estudiante_nombre"
            app:layout_constraintStart_toEndOf="@+id/tv_estudiante_nombre"
            app:layout_constraintTop_toTopOf="@+id/tv_estudiante_nombre" />

        <TextView
            android:id="@+id/tv_estudiante_ira_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="IRA:"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_estudiante_carrera"
            app:layout_constraintTop_toBottomOf="@+id/tv_estudiante_carrera" />

        <TextView
            android:id="@+id/tv_estudiante_fecha_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fecha:"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_estudiante_ira_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_estudiante_ira_label" />

        <TextView
            android:id="@+id/tv_estudiante_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="TextView"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_estudiante_fecha_label"
            app:layout_constraintStart_toEndOf="@+id/tv_estudiante_fecha_label"
            app:layout_constraintTop_toTopOf="@+id/tv_estudiante_fecha_label"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_estudiante_ira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_estudiante_ira_label"
            app:layout_constraintStart_toEndOf="@+id/tv_estudiante_ira_label"
            app:layout_constraintTop_toTopOf="@+id/tv_estudiante_ira_label"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_estudiante_carrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="#9E9E9E"
            app:layout_constraintStart_toStartOf="@+id/tv_estudiante_nombre"
            app:layout_constraintTop_toBottomOf="@+id/tv_estudiante_nombre"
            tools:ignore="NotSibling" />

        <ImageButton
            android:id="@+id/btn_more_options_estudiante"
            android:layout_width="21dp"
            android:layout_height="29dp"
            android:layout_marginEnd="20dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more_vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

